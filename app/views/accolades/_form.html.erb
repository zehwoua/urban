<%= simple_form_for(@accolade) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :accolade_category_id %>
    <%= f.input :description %>
    <%= f.input :title %>
    <%= f.input :additional_info %>
    <%= f.input :link_address %>
    <%= f.input :published %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
