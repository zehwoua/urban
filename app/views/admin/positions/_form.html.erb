<%= simple_form_for([:admin,@position]) do |f| %>
  <div class="widget">
        
    <%= render 'admin/admin_widgethead',:widgethead_title => 'Create Position' %>

    <div class="widget-content">
      <div class="padd">
        <div class="container-c">
          <% if @position.errors.any? %>
            <div id="error_explanation">
              <h5 class="text-danger"><%= pluralize(@position.errors.count, "error") %> prohibited this position from being saved:</h5>

              <ul>
              <% @position.errors.full_messages.each do |msg| %>
                <li class="text-danger"><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="row clearfix">
            <div class="col-lg-6 col-md-6 col-sm-6">
              <%= f.input :name %>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 form-inline-element">
              <%= f.button :submit,"Create Position", :class => "btn btn-default" %>
              <% if !@position.new_record? %>
                <%= link_to raw('Trash'), admin_position_path(@position), :method => :delete, :data =>'Are you sure you want to delete?', :class => "btn btn-danger" %>
              <% else %>
                <%= link_to "Trash", "", :class =>"btn btn-danger disabled" %>
              <% end %>

            </div>
          </div>
        </div><!--/container-c-->
      </div><!--/padd-->
    </div><!--/widget-content-->
  </div><!--/widget-->
<% end %>
