<%= simple_form_for([:admin,@office]) do |f| %>
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8">
      <div class="widget">
            
        <%= render 'admin/admin_widgethead',:widgethead_title => 'Create Office' %>

        <div class="widget-content">
          <div class="padd">
            <div class="container-c">
              <% if @office.errors.any? %>
                <div id="error_explanation">
                  <h5 class="text-danger"><%= pluralize(@office.errors.count, "error") %> prohibited this office from being saved:</h5>

                  <ul>
                  <% @office.errors.full_messages.each do |msg| %>
                    <li class="text-danger"><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              
              <div class="input select optional office_country">
                <%= f.label :country %>
                <%= f.country_select :country %>
              </div>
              <%= f.input :city %>
              <%= f.input :address %>
              <%= f.input :email %>
              <%= f.input :website %>

              <hr/>
              <br/>
              <%= f.button :submit, :class => "btn btn-default" %>
                
            </div><!--/container-c-->
          </div><!--/padd-->
        </div><!--/widget-content-->
      </div><!--/widget-->
    </div><!--/col-lg-8-->
    <div class="col-lg-4 col-md-4 col-sm-4">
      <div class="widget">
            
        <%= render 'admin/admin_widgethead',:widgethead_title => 'Create Office Social' %>

        <div class="widget-content">
          <div class="padd">
            <div class="container-c">
              
              <%= f.input :twitter %>
              <%= f.input :pinterest %>
              <%= f.input :mailchimp %>
              <%= f.input :mixcloud %>
              
            </div><!--/container-c-->
          </div><!--/padd-->
        </div><!--/widget-content-->
      </div><!--/widget-->
      <div class="widget">
            
        <%= render 'admin/admin_widgethead',:widgethead_title => 'Office Image' %>

        <div class="widget-content">
          <div class="padd">
            <div class="container-c">
              <div class="fileinput fileinput-new" data-provides="fileinput">
                <div class="fileinput-new thumbnail" style="width: 100%; height: auto;">
                  
                  <% if @office.image.url present? %>
                    <%= image_tag @office.image_url.to_s %>
                  <% else %>
                    <!-- <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image" /> -->
                    <img data-src="holder.js/100%x100%" alt="100%x100%" src="data:image/png;base64," style="height: 100%; width: 100%; display: block;">
                  <% end %>
                </div>
                <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 100%;"></div>
                <div>
                  <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><%= f.file_field :image %></span>
                  <a href="#" class="btn btn-danger fileinput-exists" data-dismiss="fileinput">Remove</a>
                </div>
              </div>

            </div><!--/container-c-->
          </div><!--/padd-->
        </div><!--/widget-content-->
      </div><!--/widget office_picture-->

    </div><!--/col-lg-6-->
  </div><!--/row-->
<% end %>

          