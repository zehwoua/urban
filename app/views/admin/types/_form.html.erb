<%= simple_form_for([:admin,@type]) do |f| %>
  <div class="widget">
        
    <%= render 'admin/admin_widgethead',:widgethead_title => 'Create Portfolio Type' %>

    <div class="widget-content">
      <div class="padd">
        <div class="container-c">
          <% if @type.errors.any? %>
            <div id="error_explanation">
              <h5 class="text-danger"><%= pluralize(@type.errors.count, "error") %> prohibited this type from being saved:</h5>

              <ul>
              <% @type.errors.full_messages.each do |msg| %>
                <li class="text-danger"><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        	<div class="row clearfix">
        		<div class="col-lg-6 col-md-6">
        			<%= f.input :name %>
        		</div>
        		<div class="col-lg-6 col-md-6 form-inline-element">
        			<%= f.button :submit,"Create Portfolio Type", :class => "btn btn-default" %>
        			<% if !@type.new_record? %>
                <%= link_to raw('Trash'), admin_type_path(@type), :method => :delete, :data =>'Are you sure you want to delete?', :class => "btn btn-danger" %>
              <% else %>
                <%= link_to "Trash", "", :class =>"btn btn-danger disabled" %>
              <% end %>

        		</div>
        	</div>
        </div><!--/container-c-->
      </div><!--/padd-->
    </div><!--/widget-content-->
  </div><!--/widget-->
<% end %>
